{
  "expo": {
    "name": "EaseVerse",
    "slug": "easeverse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/easeverse_logo_App.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/easeverse_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0E0F14"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.myapp"
    },
    "android": {
      "package": "com.myapp",
      "adaptiveIcon": {
        "backgroundColor": "#0E0F14",
        "foregroundImage": "./assets/images/easeverse_logo_App.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      }
    },
    "web": {
      "favicon": "./assets/images/easeverse_logo_App_favicon.png",
      "backgroundColor": "#0E0F14"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-audio",
      "expo-image",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
